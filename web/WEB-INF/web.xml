<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>webapp.Login</servlet-class>
    </servlet>

    <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>customer</servlet-name>
        <servlet-class>webapp.Customer</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>customer</servlet-name>
        <url-pattern>/app/customer</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>dashboard</servlet-name>
        <servlet-class>webapp.Dashboard</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>dashboard</servlet-name>
        <url-pattern>/app/dashboard</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>item</servlet-name>
        <servlet-class>webapp.Item</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>item</servlet-name>
        <url-pattern>/app/item</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>order</servlet-name>
        <servlet-class>webapp.Order</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>order</servlet-name>
        <url-pattern>/app/order</url-pattern>
    </servlet-mapping>

    <!--<listener>-->
    <!--<listener-class>webapp.listener.ContextListener</listener-class>-->
    <!--</listener>-->


    <resource-ref >
        <description>MySQL Datasource example</description >
        <res-ref-name >ThogaKade</res-ref-name >
        <res-type >javax.sql.DataSource</res-type >
        <res-auth >Container</res-auth >
    </resource-ref >
</web-app>

